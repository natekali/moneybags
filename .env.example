# =============================================================================
# BAGS SNIPER - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env with real credentials!
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED - Trading APIs
# -----------------------------------------------------------------------------

# Bags.fm API (get from https://bags.fm)
BAGS_API_KEY=your_bags_api_key_here
BAGS_API_BASE_URL=https://public-api-v2.bags.fm/api/v1

# Helius RPC (get from https://helius.dev - free tier available)
HELIUS_API_KEY=your_helius_api_key_here

# -----------------------------------------------------------------------------
# REQUIRED - Communication
# -----------------------------------------------------------------------------

# Telegram Bot (create via @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# -----------------------------------------------------------------------------
# REQUIRED - Wallet
# -----------------------------------------------------------------------------

# Solana wallet private key (base58 encoded)
# WARNING: Use a dedicated trading wallet, not your main wallet!
WALLET_PRIVATE_KEY=your_base58_private_key_here

# -----------------------------------------------------------------------------
# REQUIRED - Database
# -----------------------------------------------------------------------------

# PostgreSQL (for deployer intelligence data)
# For Docker: uses port 5433 to avoid conflict with local PostgreSQL installations
DATABASE_URL=postgresql+asyncpg://bags_sniper:bags_sniper_dev@localhost:5433/bags_sniper

# Redis (for caching)
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# OPTIONAL - AI Analysis (can be empty to disable)
# -----------------------------------------------------------------------------

# Deepseek AI for narrative analysis (async, non-blocking)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# -----------------------------------------------------------------------------
# TRADING PARAMETERS
# -----------------------------------------------------------------------------

# Position sizing
MAX_POSITION_SIZE_SOL=0.3
BASE_RISK_PERCENT=2.0

# Deployer thresholds
MIN_DEPLOYER_SCORE=60.0
MIN_GRADUATION_RATE=0.042

# Circuit breaker thresholds (percent drawdown)
CIRCUIT_BREAKER_L1_PERCENT=3.0
CIRCUIT_BREAKER_L2_PERCENT=5.0
CIRCUIT_BREAKER_L3_PERCENT=8.0
CIRCUIT_BREAKER_L4_PERCENT=10.0

# Take profit levels
TP_TIER1_MULTIPLE=2.5
TP_TIER1_PERCENT=25.0
TP_TIER2_MULTIPLE=4.0
TP_TIER2_PERCENT=35.0
TP_TIER3_MULTIPLE=7.0
TP_TIER3_PERCENT=20.0
TRAILING_STOP_PERCENT=15.0
STOP_LOSS_PERCENT=30.0

# -----------------------------------------------------------------------------
# OPERATIONAL
# -----------------------------------------------------------------------------

# Set to false for live trading (BE CAREFUL!)
DRY_RUN=true

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Jito MEV protection
USE_JITO_BUNDLES=true
JITO_TIP_LAMPORTS=10000
